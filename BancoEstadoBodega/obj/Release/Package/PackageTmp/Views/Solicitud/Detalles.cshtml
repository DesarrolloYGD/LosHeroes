@model BancoEstadoBodega.Models.SolicitudPedido
@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Solicitud de Pedido - Detalle</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            N° OC
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dt>
            Destino
        </dt>

        <dd>
            @Html.DisplayFor(model => model.destino)
        </dd>

        <dt>
            Fecha de Solicitud
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaSolicitud)
        </dd>
        <dt>
            N° Guía entrega Promomas
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codigoSeguimiento)
        </dd>

        <dt>
            Comprador
        </dt>

        <dd>
            @Html.DisplayFor(model => model.usuarioMandante)
        </dd>

        <dt>
            Solicitante
        </dt>

        <dd>
            @Html.DisplayFor(model => model.usuarioReceptor)
        </dd>
        <dt>
            Observaciones
        </dt>

        <dd>
            @Html.DisplayFor(model => model.observacion)
        </dd>
        <dt>
            Estado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.estado)
        </dd>

        
        <dt>
            Correo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.correo)
        </dd>

    </dl>





</div>

<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>CODIGO</th>
                    <th>PRODUCTO</th>
                    <th>CANTIDAD</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProductoSolicitud)
                {
                    if (@item.idProducto != 0)
                    {
                        
                        {
                            <tr>
                                <td>
                                    @item.idSolicitud
                                </td>
                                <td>
                                    @item.PRODUCTO.Nombre
                                </td>
                                <td>
                                    @item.cantidad
                                </td>
                            </tr>
                        }

                    }

                }
            </tbody>
        </table>
    </div>
</div>

<p>
    @Html.ActionLink("Volver", "SolicitudPedido")
</p>
