<div class="modal fade" id="modalCrearCategoria">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="@Url.Action("CreateProducto", "Administracion")" method="post">
                <div class="modal-header btn-primary">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Agregar Producto</h4>
                </div>
                <div class="modal-body">
                    <div class="input-group">
                        <span class="input-group-addon">Codigo</span>
                        <input type="text" class="form-control" name="Codigo" placeholder="Codigo" maxlength="50" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Nombre</span>
                        <input type="text" class="form-control" name="Nombre" placeholder="Nombre" maxlength="100" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Bodega1 (cajas)</span>
                        <input type="number" class="form-control" name="Bodega1Cajas" placeholder="Cajas" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Bodega1 (sueltas)</span>
                        <input type="number" class="form-control" name="Bodega1Sueltas" placeholder="Unidades" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Bodega2 (cajas)</span>
                        <input type="number" class="form-control" name="Bodega2Cajas" placeholder="Cajas" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Bodega2 (sueltas)</span>
                        <input type="number" class="form-control" name="Bodega2Sueltas" placeholder="Unidades" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">Costo</span>
                        <input type="text" class="form-control" name="CostoUnid" placeholder="Costo" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">SubCategorias</span>
                        @*@Html.DropDownList("IDVENDEDOR", (SelectList)ViewBag.Vendedor, "Seleccionar", new { @class = "form-control" })*@
                    </div>
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
