@{
    ViewBag.Title = "Home Page";
}



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> <span class="glyphicon glyphicon-th" aria-hidden="true"></span> Enlaces rápidos</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="alert alert-info" role="alert">
                            <h4 class="text-center">
                                <a href="../../Administracion/Producto" class="alert-link"><span class="glyphicon glyphicon-gift" aria-hidden="true"></span><br />Productos</a>
                            </h4>
                        </div>
                    </div>
                    @if (ViewContext.HttpContext.User.IsInRole("administradores") || ViewContext.HttpContext.User.IsInRole("Compradores"))
                    {
                        <div class="col-md-4">
                            <div class="alert alert-warning" role="alert">
                                <h4 class="text-center">
                                    <a href="../../Solicitud/SolicitudPedido" class="alert-link"><span class="glyphicon glyphicon-send" aria-hidden="true"></span><br />Solicitudes</a>
                                </h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="alert alert-danger" role="alert">
                                <h4 class="text-center">
                                    <a href="../../Reporte/Index" class="alert-link"><span class="glyphicon glyphicon-file" aria-hidden="true"></span><br />Reportes</a>
                                </h4>
                            </div>
                        </div>
                    }
                   
                    
                </div>
            </div>
        </div>
    </div>
</div>