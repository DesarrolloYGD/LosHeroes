<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi Catalogo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img src="~/img/logo.png" class="img-responsive" width="115" /></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Dashboard</a></li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
              
           
                    @if (User.Identity.IsAuthenticated && ViewContext.HttpContext.User.IsInRole("administradores") || ViewContext.HttpContext.User.IsInRole("Compradores"))
                    {
                        <ul class="nav nav-sidebar">
                            <li><a href="~/Home/Index"><img src="~/img/logo2.png" width="190" height="50" class="img-responsive" /></a></li>
                            <li @*class="active"*@><a href="../../Administracion/Producto">Productos <span class="sr-only">(current)</span></a></li>                  
                            <li><a href="../../Solicitud/SolicitudPedido">Solicitudes</a></li>
                            <li @*class="active"*@><a href="../../Solicitud/ProductoBodega">Bodega <span class="sr-only">(current)</span></a></li>
                            <li><a href="../../Reporte/Index">Reportes</a></li>
                            @*<li><a href="../../Administracion">Administracion</a></li>*@
                        </ul>
                    }
                    else
                    if (User.Identity.IsAuthenticated && ViewContext.HttpContext.User.IsInRole("Vista"))
                    {
                        <ul class="nav nav-sidebar">
                            <li><a href="~/Home/Index"><img src="~/img/logo2.png" width="190" height="50" class="img-responsive" /></a></li>
                            <li @*class="active"*@><a href="../../Administracion/Producto">Productos <span class="sr-only">(current)</span></a></li>
                            <li @*class="active"*@><a href="../../Solicitud/ProductoBodega">Bodega <span class="sr-only">(current)</span></a></li>
                            @*<li><a href="../../Solicitud/SolicitudPedido">Solicitudes</a></li>
                              <li><a href="../../Reporte/Index">Reportes</a></li> *@
                            @*<li><a href="../../Administracion">Administracion</a></li>*@
                        </ul>
                    }

</div>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Logistica y Bodega</p>
        </footer>
    </div>

    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
